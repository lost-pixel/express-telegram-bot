{
  "name": "ts-express-prisma-rest",
  "version": "1.0.0",
  "description": "A boilerplate for express app using relational database and sequelize",
  "main": "index.js",
  "scripts": {
    "pretest:watch": "docker-compose -f docker-compose.test.yml up -d",
    "test:watch": "npx prisma db push && jest --watch --forceExit --detectOpenHandles --runInBand --silent",
    "posttest:watch": "docker-compose -f docker-compose.test.yml down",
    "pretest": "docker-compose -f docker-compose.test.yml up -d",
    "test": "npx prisma db push && jest --forceExit --detectOpenHandles --runInBand --silent",
    "test:ci": "npx prisma db push && jest --forceExit --detectOpenHandles --runInBand --silent",
    "posttest": "docker-compose -f docker-compose.test.yml down",
    "prestart:dev": "docker-compose up -d",
    "start:dev": "tsc-watch --onSuccess 'node ./dist/src/app.js'",
    "poststart:dev": "docker-compose down",
    "lint": "eslint . --ext .ts",
    "prettier": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "prepare": "husky install",
    "build": "tsc",
    "start": "node dist/src/app.js",
    "dev": "concurrently \"npx tsc --watch\" \"nodemon -q dist/src/app.js\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pshaddel/ts-express-prisma-rest.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/pshaddel/ts-express-prisma-rest/issues"
  },
  "homepage": "https://github.com/pshaddel/ts-express-prisma-rest#readme",
  "dependencies": {
    "@prisma/client": "^4.11.0",
    "@telegraf/session": "2.0.0-beta.6",
    "@types/helmet": "^4.0.0",
    "concurrently": "^7.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "helmet": "^6.0.1",
    "kysely": "^0.23.5",
    "openai": "^3.2.1",
    "pg": "^8.10.0",
    "prisma": "^4.11.0",
    "shapely": "^0.2.3",
    "telegraf": "^4.12.2",
    "typescript": "^4.9.5",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@swc/core": "^1.3.38",
    "@swc/jest": "^0.2.24",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.6",
    "@types/pg": "^8.6.6",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "npm-check-updates": "^16.7.10",
    "prettier": "^2.8.4",
    "session": "link:@types/@telegraf/session",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "tsc-watch": "^6.0.0"
  }
}
